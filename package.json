{
  "name": "color-picker-svelte",
  "version": "0.3.0",
  "description": "Color picker for Svelte",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && svelte-kit package",
    "build:package": "svelte-kit package",
    "build:site": "vite build",
    "preview": "svelte-kit preview",
    "lint": "prettier --plugin-search-dir=. --check src *.js && eslint src *.js && svelte-check",
    "format": "prettier --plugin-search-dir=. --write src *.js && eslint --fix src *.js"
  },
  "devDependencies": {
    "@ctrl/tinycolor": "^3.4.1",
    "@sveltejs/adapter-static": "1.0.0-next.38",
    "@sveltejs/kit": "1.0.0-next.403",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "prettier": "^2.7.1",
    "prettier-plugin-svelte": "^2.7.0",
    "sass": "^1.54.3",
    "svelte": "^3.49.0",
    "svelte-check": "^2.8.0",
    "svelte-preprocess": "^4.10.7",
    "svelte2tsx": "^0.5.13",
    "typescript": "^4.7.4"
  },
  "license": "MIT",
  "homepage": "https://color-picker-svelte.kasper.space",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/probablykasper/color-picker-svelte.git"
  },
  "bugs": {
    "url": "https://github.com/probablykasper/color-picker-svelte/issues"
  },
  "author": {
    "name": "Kasper Henningsen",
    "url": "https://kasper.space"
  },
  "keywords": [
    "color",
    "picker",
    "color-picker",
    "colorpicker",
    "svelte"
  ],
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true
  }
}
