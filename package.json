{
  "name": "color-picker-svelte",
  "version": "1.0.0",
  "description": "Color picker for Svelte",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && svelte-package",
    "build:package": "svelte-package",
    "build:site": "vite build",
    "preview": "svelte-kit preview",
    "lint": "prettier --plugin-search-dir=. --check src *.js && eslint src *.js && svelte-check --tsconfig ./tsconfig.json",
    "format": "prettier --plugin-search-dir=. --write src *.js && eslint --fix src *.js"
  },
  "devDependencies": {
    "@ctrl/tinycolor": "^3.4.1",
    "@sveltejs/adapter-static": "1.0.0-next.48",
    "@sveltejs/kit": "1.0.0-next.551",
    "@sveltejs/package": "1.0.0-next.6",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "prettier": "^2.7.1",
    "prettier-plugin-svelte": "^2.8.0",
    "sass": "^1.56.1",
    "svelte": "^3.53.1",
    "svelte-check": "^2.9.2",
    "svelte-preprocess": "^4.10.7",
    "svelte2tsx": "^0.5.20",
    "typescript": "^4.9.3"
  },
  "license": "MIT",
  "homepage": "https://color-picker-svelte.kasper.space",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/probablykasper/color-picker-svelte.git"
  },
  "bugs": {
    "url": "https://github.com/probablykasper/color-picker-svelte/issues"
  },
  "author": {
    "name": "Kasper Henningsen",
    "url": "https://kasper.space"
  },
  "keywords": [
    "color",
    "picker",
    "color-picker",
    "colorpicker",
    "svelte"
  ],
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true
  }
}
